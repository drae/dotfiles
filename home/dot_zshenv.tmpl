# Follow the XDG directory spec wherever possible
export XDG_CONFIG_HOME=${XDG_CONFIG_HOME:=$HOME/.config}
export XDG_CACHE_HOME=${XDG_CACHE_HOME:=$HOME/.cache}
export XDG_DATA_HOME=${XDG_DATA_HOME:=$HOME/.local/share}
if [[ ! -w ${XDG_RUNTIME_DIR:=/run/user/$(id -u)} ]]; then
    export XDG_RUNTIME_DIR=/tmp
fi
export XDG_RUNTIME_DIR

# XDG_CONFIG_HOME
export ZDOTDIR=$XDG_CONFIG_HOME/zsh
export DOCKER_CONFIG=$XDG_CONFIG_HOME/docker
export NPM_CONFIG_USERCONFIG=$XDG_CONFIG_HOME/npm/npmrc
export WGETRC=$XDG_CONFIG_HOME/wgetrc

# XDG_DATA_HOME
export ZSH_DATA_DIR=$XDG_DATA_HOME/zsh

# XDG_CACHE_HOME
export ZSH_CACHE_DIR=$XDG_CACHE_HOME/zsh

# Go
export GOPATH=$HOME/go
export GOROOT=$XDG_DATA_HOME/golang

# The paths
export PATH="$HOME/.local/bin:$HOME/go/bin:$HOME/.krew/bin:$PATH:$HOME/.local/share/rtx/shims"

# LESS man page colors (makes Man pages more readable).
export LESS_TERMCAP_mb=$'\E[01;31m'
export LESS_TERMCAP_md=$'\E[01;31m'
export LESS_TERMCAP_me=$'\E[0m'
export LESS_TERMCAP_se=$'\E[0m'
export LESS_TERMCAP_so=$'\E[00;44;37m'
export LESS_TERMCAP_ue=$'\E[0m'
export LESS_TERMCAP_us=$'\E[01;32m'

# Set the editor
export EDITOR="nvim"
export VISUAL="nvim"
